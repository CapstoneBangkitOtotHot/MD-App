<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    card_view:cardCornerRadius="8dp"
    card_view:cardElevation="2dp"> <!-- Reduced elevation -->

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp"> <!-- Reduced padding -->

        <ImageView
            android:id="@+id/Detail_inference"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/tvFruitClass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fruit Class"
            android:textStyle="bold"
            android:paddingTop="4dp" /> <!-- Reduced padding -->

        <TextView
            android:id="@+id/tvFreshnessPercentage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Freshness Percentage"
            android:paddingTop="2dp" /> <!-- Reduced padding -->
        </LinearLayout>
    </androidx.cardview.widget.CardView>



